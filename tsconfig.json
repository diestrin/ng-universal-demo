{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "lib"
  },
  "include": [
    "src/**/*"
	],
	"angularCompilerOptions": {
		"genDir": "src/ngfactory",
		"entryModule": "./src/app#AppModule"
	}
}
